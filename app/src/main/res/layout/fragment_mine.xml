<layout >
    <data>
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_normal_bg"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:fitsSystemWindows="true"
        android:scrollbars="none">
        <LinearLayout
            android:background="@color/grey_normal_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvSkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="夜间"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/lx_top_rect_circle"/>
                    <TextView
                        android:id="@+id/tvSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/iv_qiandao"
                        android:background="@drawable/lx_top_rect_circle"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/leftInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D13A2D">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:roundAsCircle="true"
                    app:placeholderImage="@mipmap/wn_iv_icon_doctor"
                    app:placeholderImageScaleType="fitXY"/>
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style=" @style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="小明"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ivUserAvatar"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style=" @style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="跟帖局局长"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tvUserName"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:background="#D13A2D">
                <LinearLayout
                    android:id="@+id/llCollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvCollection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvGT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跟帖"
                        android:textSize="@dimen/font_small"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>
            <com.newscenter.first.views.WaveView
                android:id="@+id/waveView"
                android:rotation="180"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                />

            <com.newscenter.first.views.MyItemOne
                android:layout_marginTop="-10dp"
                android:id="@+id/lrvShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.newscenter.first.views.MyItemOne>

            <com.newscenter.first.views.MyItemOne
                android:id="@+id/lrvOpinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp">

            </com.newscenter.first.views.MyItemOne>

            <com.newscenter.first.views.MyItemOne
                android:id="@+id/lrvSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            </com.newscenter.first.views.MyItemOne>
        </LinearLayout>
    </ScrollView>
</layout>