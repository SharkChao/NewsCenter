<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_normal_bg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNewFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我要反馈"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/font_small"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnNewFeedBack"
            android:layout_marginLeft="@dimen/spacing_10"
            android:paddingTop="@dimen/spacing_10"
            android:paddingBottom="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_10"
            android:layout_width="0dp"
            android:layout_height="0dp">
        </android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>
</layout>

