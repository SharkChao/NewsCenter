<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

   <ImageButton
       android:id="@+id/btnBack"
       android:layout_width="1dp"
       android:layout_height="22dp"
       android:layout_marginLeft="@dimen/spacing_10"
       android:layout_marginTop="@dimen/spacing_20"
       android:background="@null"
       android:scaleType="fitXY"
       android:padding="@dimen/spacing_4"
       android:visibility="invisible"
       android:src="@mipmap/wn_iv_top_back"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>

   <Button
       android:id="@+id/btnSearch"
       android:layout_width="44dp"
       android:layout_height="48dp"
       android:background="@null"
       android:text="搜索"
       android:textColor="@color/colorPrimary"
       android:textSize="@dimen/font_normal"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="@dimen/spacing_4"
       android:layout_marginRight="@dimen/spacing_10"
       />

   <LinearLayout
       android:id="@+id/llSearchBar"
       android:layout_width="0dp"
       android:layout_height="33dp"
       android:background="@drawable/tv_title_bar_search_corner_shape"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       app:layout_constraintLeft_toRightOf="@id/btnBack"
       app:layout_constraintTop_toTopOf="@id/btnSearch"
       app:layout_constraintRight_toLeftOf="@id/btnSearch"
       android:layout_marginLeft="14dp"
       android:layout_marginTop="@dimen/spacing_10"
       >
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginLeft="5dp"
          android:src="@mipmap/wn_iv_mian_top_find"
          />

      <EditText
          android:id="@+id/etSearch"
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:layout_marginLeft="3dp"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:maxLines="1"
          android:hint="搜索"
          android:textColor="@color/grey_text_color_normal"
          android:textSize="15sp"
          android:background="@null"
          android:singleLine="true"
          />
   </LinearLayout>

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="0.3dp"
       android:background="@color/app_line_colors"
       app:layout_constraintTop_toBottomOf="@id/btnSearch"
       android:layout_marginTop="6dp"/>

</android.support.constraint.ConstraintLayout>
   <TextView
       android:id="@+id/tvNewKH"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="@dimen/spacing_10"
       android:paddingBottom="@dimen/spacing_10"
       android:paddingLeft="@dimen/spacing_30"
       android:paddingRight="@dimen/spacing_30"
       android:textSize="@dimen/font_smaller"
       android:textColor="@color/colorPrimary"
       />
<android.support.v7.widget.RecyclerView
android:id="@+id/rvList"
android:layout_width="match_parent"
android:layout_height="match_parent">
</android.support.v7.widget.RecyclerView>
</LinearLayout>