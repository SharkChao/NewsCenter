<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/font_smaller"
        android:layout_marginTop="@dimen/font_small"
        android:src="@mipmap/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivShareCode"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="76dp"
        android:src="@mipmap/iv_code"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.5dp"
        android:text="分享二维码"
        android:textColor="@color/font_gray2"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivShareCode"/>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_line"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_line_colors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShare"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/iv_wx_circle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_wx_circle"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        android:layout_marginRight="13dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_qq"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/iv_wx_friend"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_wx_friend"
        app:layout_constraintRight_toLeftOf="@id/iv_wx_circle"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/iv_wb"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_wb"
        app:layout_constraintLeft_toRightOf="@id/iv_qq"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_wx_friend"
        app:layout_constraintRight_toRightOf="@id/iv_wx_friend"
        android:text="微信好友"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_gray2"
        app:layout_constraintTop_toBottomOf="@id/iv_wx_friend"
        android:layout_marginTop="10dp"
        android:paddingBottom="55dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_wx_circle"
        app:layout_constraintRight_toRightOf="@id/iv_wx_circle"
        android:text="朋友圈"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_gray2"
        app:layout_constraintTop_toBottomOf="@id/iv_wx_circle"
        android:layout_marginTop="10dp"
        android:paddingBottom="55dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_qq"
        app:layout_constraintRight_toRightOf="@id/iv_qq"
        android:text="QQ好友"
        android:textSize="12sp"
        android:textColor="@color/font_gray2"
        app:layout_constraintTop_toBottomOf="@id/iv_qq"
        android:layout_marginTop="10dp"
        android:paddingBottom="55dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_wb"
        app:layout_constraintRight_toRightOf="@id/iv_wb"
        android:text="微博"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/font_gray2"
        app:layout_constraintTop_toBottomOf="@id/iv_wb"
        android:layout_marginTop="10dp"
        android:paddingBottom="55dp"/>
</android.support.constraint.ConstraintLayout>